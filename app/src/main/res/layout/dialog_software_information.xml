<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_marginTop="80dp"
            android:id="@+id/imageView_softInformation_appIcon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_smart_home_50px">

        </ImageView>

        <TextView
            android:id="@+id/textView_softInformation_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_softInformation_appIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_ui_display_heavy"
            android:text="Smart Home Control"
            android:textColor="@android:color/black"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/textView_softInformation_appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_softInformation_appName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:text="Version 1.0.0 (101)"
            android:textColor="@android:color/black"
            android:textSize="14sp">

        </TextView>

        <TextView
            android:id="@+id/textView_softInformation_appCopyright"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_softInformation_appVersion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:lines="2"
            android:text="Copyright Â© 2019-2020, Lefa Tech JSC., All Rights Reserved."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp">

        </TextView>
    </RelativeLayout>
</RelativeLayout>